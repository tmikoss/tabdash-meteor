template(name='trains')
  table.table.trains
    thead
      tr
        th
        th Dole
        th Salaspils
    tbody
      each trainsByDay
        +trainDay

template(name='trainDay')
  tr.active
    td(colspan='3')
      = date
  each trains
    +trainRow

template(name='trainRow')
  tr
    td.text-muted
      = formattedTime
    td
      if dole
        span.glyphicon.glyphicon-ok
    td
      if salaspils
        span.glyphicon.glyphicon-ok
        
