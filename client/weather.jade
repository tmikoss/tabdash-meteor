template(name='forecastDay')
  tr.active
    td(colspan='3')
      = date
  each forecasts
    +weatherRow

template(name='weatherRow')
  tr
    td.text-muted
      = formattedTime
    td
      strong
        = temperature
    td.text-left
      img(src="http://api.yr.no/weatherapi/weathericon/1.1/?symbol=#{code};content_type=image/png")
      span.text-muted
        = name
        
