head
  title Tabdash
body
  +header
  +carousel
  
template(name='carousel')
  .carousel.slide
    .carousel-inner
      .item
        +trains
      .item
        +weather
      .item.active
        +routes
        
template(name='header')
  .row
    .col-xs-3
    .col-xs-6.text-center
      .current-time
        = formattedTime
      .current-date.text-muted
        = formattedDate
    .col-xs-3.namedays
      each namedays
        .text-muted
          = name
