head
  title Tabdash
body
  +header
  +weather
  
template(name='header')
  .row
    .col-xs-3
    .col-xs-6.text-center
      .current-time
        = formattedTime
      .current-date.text-muted
        = formattedDate
    .col-xs-3.namedays
      each namedays
        .text-muted
          = name

template(name='weather')
  table.table.forecasts
    thead
      tr
        th
        th Â°C
        th
    tbody
      each forecasts
        +weatherRow

template(name='weatherRow')
  tr
    td.text-center.text-muted
      = range
    td.text-center
      strong
        = temperature
    td.text-left
      img(src="http://api.yr.no/weatherapi/weathericon/1.1/?symbol=#{code};content_type=image/png")
      span.text-muted
        = name

